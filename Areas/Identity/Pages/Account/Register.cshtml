@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@* <h1>@ViewData["Title"]</h1> *@

<div class="wrapper">    
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h1>Create a new account.</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="input-box">
                <input asp-for="Input.Email" type="email" placeholder="Email" required />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
             <div class="input-box">
                <input asp-for="Input.Password" type="password" placeholder="Password" required />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="input-box">
                <input asp-for="Input.ConfirmPassword" type="password" placeholder="ConfirmPassword" requered />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="input-box">
                <button id="registerSubmit" type="submit" class="btn">Register</button>
            </div>
            <div class="register-link">
            <p>Already have an account?  <a href="/Identity/Account/Login">To Enter</a></p>
            </div>
        </form>
</div>    
   

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
